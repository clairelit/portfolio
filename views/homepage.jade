extends layout

block content
  body#page-top
    nav#mainNav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand.page-scroll(href='#page-top') Portfolio Site
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              a.page-scroll(href='#about') Login/Register
            li
              a.page-scroll(href='#services') Services
            li
              a.page-scroll(href='#portfolio') Examples
            li
              a.page-scroll(href='#contact') Contact
        // /.navbar-collapse
      // /.container-fluid
  body



      // SECTION 1
    header
      .header-content
        .header-content-inner
          h1 Welcome to your portfolio builder
          hr
          p View and browse through portfolios or create your own personal one
          a.btn.btn-primary.btn-xl.page-scroll(href='#about') Login/Register
    a(name='#about')
    section#about.bg-primary
      .container
        .row
          .col-xs-12.col-sm-12.col-md-6.col-lg-6.text-center
            h2.section-heading Login
            hr.light
            p.text-faded 
            form(method='post', action='login') Upload your work, or browse through other portfolios
           
           
              .form-group
                label.cols-sm-2.control-label(for='username') Username
                .cols-sm-10
                  .input-group
                    span.input-group-addon
                      i.fa.fa-users.fa(aria-hidden='true')
                    input#username.form-control(type='text', name='username', placeholder='Enter your Username')
                    
              .form-group
                label.cols-sm-2.control-label(for='password') Password
                .cols-sm-10
                  .input-group
                    span.input-group-addon
                      i.fa.fa-lock.fa-lg(aria-hidden='true')
                    input#password.form-control(type='password', name='password', placeholder='Enter your Password')
                    
                    
                  button.btn.btn-default.btn-xl(type='submit') Login
              
            
            
          .col-xs-12.col-sm-12.col-md-6.col-lg-6.text-center
            h2.section-heading Register
            hr.light
            p.text-faded
            form(method='post', action='register') Upload your work, or browse through other portfolios  
                .form-group
                  label.cols-sm-2.control-label(for='firstname') *Your First Name
                  .cols-sm-10
                    .input-group
                      span.input-group-addon
                        i.fa.fa-user.fa(aria-hidden='true')
                      input#firstname.form-control(type='text', required='required', name='firstname', placeholder='Enter your First Name')
                .form-group
                  label.cols-sm-2.control-label(for='surname') *Your Surname
                  .cols-sm-10
                    .input-group
                      span.input-group-addon
                        i.fa.fa-user.fa(aria-hidden='true')
                      input#surname.form-control(type='text', required='required', name='surname', placeholder='Enter your Surname')
                 .form-group
                  label.cols-sm-2.control-label(for='username') *Your Username
                  .cols-sm-10
                    .input-group
                      span.input-group-addon
                        i.fa.fa-user.fa(aria-hidden='true')
                      input#username.form-control(type='text', required='required', name='username', placeholder='Enter your Username')
                .form-group
                  label.cols-sm-2.control-label(for='email') *Your Email
                  .cols-sm-10
                    .input-group
                      span.input-group-addon
                        i.fa.fa-envelope.fa(aria-hidden='true')
                      input#email.form-control(type='text', required='required', name='email', placeholder='Enter your Email')
                .form-group
                  label.cols-sm-2.control-label(for='pass1') *Password
                  .cols-sm-10
                    .input-group
                      span.input-group-addon
                        i.fa.fa-lock.fa-lg(aria-hidden='true')
                      input#pass1.form-control(type='password', required='required', name='password', placeholder='Enter your Password')
                .form-group
                  label.cols-sm-2.control-label(for='pass2') *Confirm Password
                  span#confirmMessage.confirmMessage
                  .cols-sm-10
                    .input-group
                      span.input-group-addon
                        i.fa.fa-lock.fa-lg(aria-hidden='true')
                      input#pass2.form-control(type='password', required='required', name='confirm', placeholder='Confirm your Password', onkeyup="checkPass(); return false;")
                      
                  button.btn.btn-default.btn-xl(type='submit') Register
    section#services
      .container
        .row
          .col-lg-12.text-center
            h2.section-heading Your Portfolio Options
            hr.primary
      .container
        .row
          .col-lg-3.col-md-6.text-center
            .service-box
              i.fa.fa-4x.fa-camera.wow.bounceIn.text-primary
              h3 Photographs
              p.text-muted Show your photos in their best light.
          .col-lg-3.col-md-6.text-center
            .service-box
              i.fa.fa-4x.fa-video-camera.wow.bounceIn.text-primary(data-wow-delay='.1s')
              h3 Videos
              p.text-muted Broadcast your videos to a wider audience.
          .col-lg-3.col-md-6.text-center
            .service-box
              i.fa.fa-4x.fa-code.wow.bounceIn.text-primary(data-wow-delay='.2s')
              h3 Repos
              p.text-muted Include your favourite repositories in your portfolio.
          .col-lg-3.col-md-6.text-center
            .service-box
              i.fa.fa-4x.fa-gamepad.wow.bounceIn.text-primary(data-wow-delay='.3s')
              h3 SWFs
              p.text-muted Embed your SWFs directly to your page.
    section#portfolio.no-padding
      .container-fluid
        .row.no-gutter
          .col-lg-4.col-sm-6
            a.portfolio-box(href='#')
              img.img-responsive(src='img/portfolio/1.jpg', alt='')
              .portfolio-box-caption
                .portfolio-box-caption-content
                  .project-category.text-faded Category
                  .project-name Project Name
          .col-lg-4.col-sm-6
            a.portfolio-box(href='#')
              img.img-responsive(src='img/portfolio/2.jpg', alt='')
              .portfolio-box-caption
                .portfolio-box-caption-content
                  .project-category.text-faded Category
                  .project-name Project Name
          .col-lg-4.col-sm-6
            a.portfolio-box(href='#')
              img.img-responsive(src='img/portfolio/3.jpg', alt='')
              .portfolio-box-caption
                .portfolio-box-caption-content
                  .project-category.text-faded Category
                  .project-name Project Name
          .col-lg-4.col-sm-6
            a.portfolio-box(href='#')
              img.img-responsive(src='img/portfolio/4.jpg', alt='')
              .portfolio-box-caption
                .portfolio-box-caption-content
                  .project-category.text-faded Category
                  .project-name Project Name
          .col-lg-4.col-sm-6
            a.portfolio-box(href='#')
              img.img-responsive(src='img/portfolio/5.jpg', alt='')
              .portfolio-box-caption
                .portfolio-box-caption-content
                  .project-category.text-faded Category
                  .project-name Project Name
          .col-lg-4.col-sm-6
            a.portfolio-box(href='#')
              img.img-responsive(src='img/portfolio/6.jpg', alt='')
              .portfolio-box-caption
                .portfolio-box-caption-content
                  .project-category.text-faded Category
                  .project-name Project Name
    section#contact
      .container
        .row
          .col-lg-8.col-lg-offset-2.text-center
            h2.section-heading Need some tips?
            hr.primary
            p Contact Form?
          .col-lg-4.col-lg-offset-2.text-center
            i.fa.fa-phone.fa-3x.wow.bounceIn
            p 123-456-6789
          .col-lg-4.text-center
            i.fa.fa-envelope-o.fa-3x.wow.bounceIn(data-wow-delay='.1s')
            p
              a(href='mailto:your-email@your-domain.com') info@portfoliosite.com
