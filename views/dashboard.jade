   for user, i in userDetails
    
                .col-xs-12.col-sm-12.col-md-6.col-lg-6
                    form(method='get', action='/editFirstNameFromDashboard')
                        .form-group
                        label.cols-sm-2.control-label(for='firstname') Firstname: &nbsp;
                        span #{user.firstname}
                        .cols-sm-5
                        .input-group
                            span.input-group-addon
                               button(type='submit')
                                i.fa.fa-save.fa-lg(aria-hidden='true')
                            input#firstname.form-control(type='text', name='firstname', placeholder='Edit your First Name')

                    form(method='get', action='/editSurnameFromDashboard')
                        br
                        .form-group
                        label.cols-sm-2.control-label(for='surname') Surname: &nbsp;
                        span #{user.surname}
                        .cols-sm-5
                        .input-group
                            span.input-group-addon
                               button(type='submit')
                                i.fa.fa-save.fa-lg(aria-hidden='true')
                            input#surname.form-control(type='text', name='surname', placeholder='Edit your Surname')

                    form(method='get', action='/editEmailFromDashboard')
                        br
                        .form-group
                        label.cols-sm-2.control-label(for='email') Email: &nbsp;
                        span #{user.email}
                        .cols-sm-5
                        .input-group
                            span.input-group-addon
                               button(type='submit')
                                i.fa.fa-save.fa-lg(aria-hidden='true')
                            input#email.form-control(type='email', name='email', placeholder='Edit your Email')
                            
                    form(method='get', action='/editPhoneNumberFromDashboard')
                        br
                        .form-group
                        label.cols-sm-2.control-label(for='phonenumber') Phone Number: &nbsp;
                        span #{user.phonenumber}
                        .cols-sm-5
                        .input-group
                            span.input-group-addon
                               button(type='submit')
                                i.fa.fa-save.fa-lg(aria-hidden='true')
                            input#phonenumber.form-control(type='tel', name='phonenumber', placeholder='Enter or Edit your Phone number')

                    form(method='get', action='/editTwitterFromDashboard')
                        br
                        .form-group
                        label.cols-sm-2.control-label(for='twitter') Twitter: &nbsp;
                        span #{user.twitter}
                        .cols-sm-5
                        .input-group
                            span.input-group-addon
                               button(type='submit')
                                i.fa.fa-save.fa-lg(aria-hidden='true')
                            input#twitter.form-control(type='twitter', name='twitter', placeholder='Enter or Edit your Twitter Handle without the "@" symbol')

                    form(method='get', action='/editLinkedinFromDashboard')
                        br
                        .form-group
                        label.cols-sm-2.control-label(for='linkedin') LinkedIn: &nbsp;
                        span #{user.linkedin}
                        .cols-sm-5
                        .input-group
                            span.input-group-addon
                               button(type='submit')
                                i.fa.fa-save.fa-lg(aria-hidden='true')
                            input#linkedIn.form-control(type='linkedin', name='linkedin', placeholder='Enter or Edit your full LinkedIn URL')
                        
                            
                    br            
                    h3 Your Biography
                    
                    form(method='get', action ='/editBioFromDashboard')
                        button(type='submit')
                            i.fa.fa-save.fa(aria-hidden='true')
                        if user.bio
                            textarea#bio.form-control(type='textarea', name='bio')  #{user.bio}
                               
                        else
                            textarea#bio.form-control(name='bio', onfocus="this.value=''", placeholder='Add your biography here')  
